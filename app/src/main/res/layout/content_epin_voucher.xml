<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:weightSum="1"
    tools:showIn="@layout/activity_epin_voucher">

    <Button
        android:id="@+id/bFundMenuBack"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="left"
        android:layout_marginTop="80dp"
        android:background="@null"
        android:drawableTop="@drawable/back"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/epin_voucher"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Serial Number"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/etMobileNumberFlexiload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:hint="Enter Voucher Serial Number"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:text="ePin Number"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/etAmountFlexiload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#fff"
        android:hint="Enter Voucher Pin Number"
        android:inputType="text"
        android:padding="10dp"
        android:textSize="20dp"
        />


    <Button
        android:id="@+id/bSendNowFlexiload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Redeem Voucher"
        android:background="#0072C6"
        android:textColor="#fff"
        android:textSize="20dp"
        />

</LinearLayout>
